server {
    listen 80;
    server_name www.orm-city.site orm-city.site;

    location / {
        proxy_pass http://fe-orm-city:3000;  # Express 컨테이너로 프록시
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # SSL 설정
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/orm-city.site/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/orm-city.site/privkey.pem;
}
